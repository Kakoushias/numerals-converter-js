# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_TYPE=redis
# Options: redis, postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_URL=postgresql://postgres:password@localhost:5432/numerals
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=numerals
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Rate Limiting
# Production default: 5000 req/min (~83 req/sec) - aligns with tested capacity
# Development: Use 50000 for load testing. Adjust based on your needs.
RATE_LIMIT_MAX=5000
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
